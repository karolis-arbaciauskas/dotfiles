command = /bin/zsh -c "tmux new -A -s work"

theme = Catppuccin Mocha
font-size = 14
font-family = "JetBrains Mono"
font-style-bold = auto
font-style-italic = auto
font-style-bold-italic = auto
confirm-close-surface = false
cursor-style = block
cursor-style-blink = false
fullscreen = true
macos-option-as-alt = true
font-thicken = true
mouse-hide-while-typing = true

# Open new splits in the same directory
window-inherit-working-directory = true

# Resize splits (Alt+hjkl)
keybind = alt+h=resize_split:left,10
keybind = alt+j=resize_split:down,10
keybind = alt+k=resize_split:up,10
keybind = alt+l=resize_split:right,10

# Close split
keybind = super+w=close_surface
